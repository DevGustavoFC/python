'''
ESTA SIMUALAÇÃO DE SISTEMA BANCÁRIO, ESTÁ NA VERSÃO 2.
'''

# Variáveis
saldo = 0.0
saques_realizados = []
depositos_realizados = []

# Função depósito
def depositar(valor):
    global saldo
    saldo += valor
    depositos_realizados.append(valor)
    print(f"Depósito de R$ {valor:.2f} realizado com sucesso.")

# Função saque
def sacar(valor):
    global saldo
    if len(saques_realizados) >= 3:
        print("Limite de saques diários atingido.")
    else:
        if saldo >= valor <= 500:
            saldo -= valor
            saques_realizados.append(valor)
            print(f"Saque de R$ {valor:.2f} realizado com sucesso.")
        else:
            print("Saldo insuficiente para o saque ou valor de saque excede o limite diário.")

# Função extrato
def extrato():
    print("Extrato:")
    for deposito in depositos_realizados:
        print(f"Depósito: R$ {deposito:.2f}")
    for saque in saques_realizados:
        print(f"Saque: R$ {saque:.2f}")
    print(f"Saldo Atual: R$ {saldo:.2f}")
    if not depositos_realizados and not saques_realizados:
        print("Não foram realizadas movimentações.")

# Loop principal
while True:
    # Menu de opções
    print("Escolha uma opção:")
    print("1 - Depositar")
    print("2 - Sacar")
    print("3 - Visualizar Extrato")
    print("4 - Sair")
    
    # Leitura Menu
    opcao = input("Opção: ")
    
    # Opção 1: Depositar
    if opcao == '1':
        valor_deposito = float(input("Informe o valor a ser depositado: "))
        if valor_deposito > 0:
            depositar(valor_deposito)
        else:
            print("Valor de depósito inválido.")
    
    # Opção 2: Sacar
    elif opcao == '2':
        valor_saque = float(input("Informe o valor a ser sacado: "))
        if valor_saque > 0:
            sacar(valor_saque)
        else:
            print("Valor de saque inválido.")
    
    # Opção 3: Extrato
    elif opcao == '3':
        extrato()
    
    # Opção 4: Sair
    elif opcao == '4':
        break
    
    else:
        print("Opção inválida. Tente novamente.")
